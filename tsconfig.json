{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noImplicitAny": false
  },
  "include": ["src/**/**.ts", "test/**/**.ts"],
  "exclude": ["node_modules"]
}
